background no
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

use_xft yes
xftfont Terminus:size=8

double_buffer yes

draw_shades yes

default_color white
default_shade_color black
default_outline_color blue

#положение 
alignment top_right

#небольшие отступы
#gap_x 10
#gap_y 10

no_buffers no

Text
${color #A548CC}Date:${color}${font size=11} ${time %a %e %b %G}${font}
${color #A548CC}Time:${color}${font size=11} ${time %I:%M:%p}${font}
${color #A548CC}Uptime:${color} ${uptime}
${color #A548CC}Kernel:${color} ${exec uname -r|cut -b1-9}
${color #A548CC}Temp:${color} ${acpitemp}C 
${color #A548CC}CPU:${color} ${freq_g}GHz (${cpu}%)
${color #A548CC}

${color #A548CC}Highest CPU:
${color #ffffff}${top name 1} ${top cpu 1}%
${color #ffffff}${top name 2} ${top cpu 2}%
${color #ffffff}${top name 3} ${top cpu 3}%

${color #A548CC}MEM usage:    $memperc%
${color #ffffff}Used: $mem of $memmax

${color #A548CC} SWAP usage: $swapperc% 
${color #ffffff}Used: $swap/$swapmax

${color #A548CC}Network usage:
${color ffffff} Up: ${upspeed wlan0}/s
${upspeedgraph wlan0 20,140  000000 ffffff}

Down: ${downspeed wlan0}/s
${downspeedgraph wlan0 20,140  000000 ffffff}

${color #A548CC}File systems:
${color ffffff} / ${fs_used /}/${fs_size /}
${fs_bar 3,140 /}
Home ${fs_used /home/user/d}/${fs_size /home/user/d} 
${fs_bar 3,140 /home/user/d}



